<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:id="@+id/tradeRecommended1">

        <ImageView
            android:id="@+id/tradeRecommendedImage1"
            app:srcCompat="@drawable/bg_trade_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/rectangle_dropshadow" />

        <TextView
            android:text="Cover kaset, lengkap dengan lirik dan daftar lagu. Harga 5k, nego halus."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tradeRecommendedImage1"
            app:layout_constraintLeft_toLeftOf="@+id/tradeRecommendedImage1"
            app:layout_constraintRight_toRightOf="@+id/tradeRecommendedImage1"
            android:paddingBottom="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/tradeRecommendedText1"
            style="@style/TradeRecommendedTextStyle" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>