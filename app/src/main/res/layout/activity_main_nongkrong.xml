<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_nongkrong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smaq.apps.smaqv01.MainNongkrongActivity">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/bg_main_toolbar"
        android:id="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        android:layout_height="60dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/toolbarContainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_main_smaq"
                android:layout_alignParentTop="true"
                android:id="@+id/smaqLogo"
                android:contentDescription="@string/main_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/mainMenuButtonContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="2"
        android:visibility="visible"
        android:id="@+id/hangoutPageContainer">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mainNongkrongContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="@android:color/white"
            android:elevation="30dp"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/bg_nongkrong_main_button"
                android:background="@null"
                android:id="@+id/bgMainNongkrongButton"
                android:adjustViewBounds="true"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp" />

            <TextView
                android:text="@string/nongkrong_tab_title_nongkrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"
                android:id="@+id/textMainNongkrongButtonTitle"
                android:textColor="@color/transparentOverlay"
                android:textSize="32sp"/>

            <TextView
                android:text="@string/nongkrong_tab_content_title_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textMainNongkrongButtonTitle"
                app:layout_constraintBottom_toTopOf="@+id/icNongkrongPlay"
                app:layout_constraintLeft_toLeftOf="@+id/bgMainNongkrongButton"
                app:layout_constraintRight_toRightOf="@+id/bgMainNongkrongButton"
                android:id="@+id/textMainNongkrongButtonContent"
                android:textColor="@color/transparentOverlay"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:adjustViewBounds="true"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/ic_nongkrong_main_play"
                android:id="@+id/icNongkrongPlay" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="@android:color/white"
            android:elevation="30dp"
            android:id="@+id/findTeamContainer"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/bg_team_main_button"
                android:background="@null"
                android:id="@+id/bgMainTeamButton"
                android:adjustViewBounds="true"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp" />

            <TextView
                android:text="@string/nongkrong_tab_title_find_your_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"
                android:id="@+id/textMainTeamButtonTitle"
                android:textColor="@color/transparentOverlay"
                android:textSize="32sp"/>

            <TextView
                android:text="@string/nongkrong_tab_content_title_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textMainTeamButtonTitle"
                app:layout_constraintBottom_toTopOf="@+id/icTeamPlay"
                app:layout_constraintLeft_toLeftOf="@+id/bgMainTeamButton"
                app:layout_constraintRight_toRightOf="@+id/bgMainTeamButton"
                android:id="@+id/textMainTeamButtonContent"
                android:textColor="@color/transparentOverlay"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:adjustViewBounds="true"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/ic_nongkrong_main_play"
                android:id="@+id/icTeamPlay" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/mainMenuButtonContainer">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/bt_main_building"
            android:id="@+id/imageButton3"
            android:scaleType="centerInside"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@null"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/bt_main_sale"
            android:id="@+id/imageButton5"
            android:scaleType="centerInside"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@null"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/bt_main_fire"
            android:id="@+id/imageButton7"
            android:scaleType="centerInside"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@null"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/bt_main_headphone"
            android:id="@+id/imageButton4"
            android:scaleType="centerInside"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@null"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageButton3"
            app:layout_constraintRight_toLeftOf="@+id/imageButton5"/>

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/bt_main_trophy"
            android:id="@+id/imageButton6"
            android:scaleType="centerInside"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@null"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageButton5"
            app:layout_constraintRight_toLeftOf="@+id/imageButton7"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bg_main_separator"
            android:id="@+id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageButton5" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton4"
            app:layout_constraintRight_toRightOf="@+id/imageButton4"
            app:srcCompat="@drawable/bg_menu_selector"
            android:id="@+id/menuSelectorSchool"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
