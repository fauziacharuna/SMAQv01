<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.smaq.apps.smaqv01.WelcomeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bg_login_title"
        android:id="@+id/welcomeTitle"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:layout_marginTop="40dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/buttonWelcomeContainer"
        android:layout_marginBottom="40dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/welcomeButton">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/bt_register"
                android:id="@+id/welcomeButtonMain" />

            <TextView
                android:text="Start now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/welcomeButtonMain"
                app:layout_constraintBottom_toBottomOf="@+id/welcomeButtonMain"
                app:layout_constraintLeft_toLeftOf="@+id/welcomeButtonMain"
                app:layout_constraintRight_toRightOf="@+id/welcomeButtonMain"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:id="@+id/labelWelcomeButtonMain" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                app:layout_constraintTop_toTopOf="@+id/labelWelcomeButtonMain"
                app:layout_constraintBottom_toBottomOf="@+id/labelWelcomeButtonMain"
                app:layout_constraintLeft_toRightOf="@+id/labelWelcomeButtonMain"
                android:layout_marginLeft="16dp"
                android:paddingBottom="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_register_button_arrow"
                android:id="@+id/arrowWelcomeButtonMain"
                android:layout_marginStart="16dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="314dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTitle"
        app:layout_constraintBottom_toTopOf="@+id/buttonWelcomeContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fadingEdgeLength="20dp"
        android:scrollbarSize="0dp"
        android:scrollbars="none"
        android:id="@+id/welcomeSlideScroll">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/bg_welcome"
                    android:id="@+id/bgWelcome1" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="@+id/bgWelcome1"
                    app:layout_constraintLeft_toLeftOf="@+id/bgWelcome1"
                    app:layout_constraintRight_toRightOf="@+id/bgWelcome1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_title1"
                        android:textColor="@android:color/black"
                        android:id="@+id/titleWelcome1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/titleWelcome1"
                        app:layout_constraintLeft_toLeftOf="@+id/titleWelcome1"
                        app:layout_constraintRight_toRightOf="@+id/titleWelcome1"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_content1"
                        android:textSize="12sp"
                        android:id="@+id/textWelcome1" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/bg_welcome"
                    android:id="@+id/bgWelcome2" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="@+id/bgWelcome2"
                    app:layout_constraintLeft_toLeftOf="@+id/bgWelcome2"
                    app:layout_constraintRight_toRightOf="@+id/bgWelcome2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_title2"
                        android:textColor="@android:color/black"
                        android:id="@+id/titleWelcome2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/titleWelcome2"
                        app:layout_constraintLeft_toLeftOf="@+id/titleWelcome2"
                        app:layout_constraintRight_toRightOf="@+id/titleWelcome2"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_content2"
                        android:textSize="12sp"
                        android:id="@+id/textWelcome2" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/bg_welcome"
                    android:id="@+id/bgWelcome3" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="@+id/bgWelcome3"
                    app:layout_constraintLeft_toLeftOf="@+id/bgWelcome3"
                    app:layout_constraintRight_toRightOf="@+id/bgWelcome3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_title3"
                        android:textColor="@android:color/black"
                        android:id="@+id/titleWelcome3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/titleWelcome3"
                        app:layout_constraintLeft_toLeftOf="@+id/titleWelcome3"
                        app:layout_constraintRight_toRightOf="@+id/titleWelcome3"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_content3"
                        android:textSize="12sp"
                        android:id="@+id/textWelcome3" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/bg_welcome"
                    android:id="@+id/bgWelcome4" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="@+id/bgWelcome4"
                    app:layout_constraintLeft_toLeftOf="@+id/bgWelcome4"
                    app:layout_constraintRight_toRightOf="@+id/bgWelcome4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_title4"
                        android:textColor="@android:color/black"
                        android:id="@+id/titleWelcome4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/titleWelcome4"
                        app:layout_constraintLeft_toLeftOf="@+id/titleWelcome4"
                        app:layout_constraintRight_toRightOf="@+id/titleWelcome4"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="@string/welcome_content4"
                        android:textSize="12sp"
                        android:id="@+id/textWelcome4" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
